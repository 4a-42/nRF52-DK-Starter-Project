{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Debug",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "jlink",
            "executable": "./build/blinky.elf",
            "cwd": "${workspaceRoot}",
            "device": "nRF52840_xxAA",
            "svdFile": "${workspaceRoot}/lib/nRF5-SDK/modules/nrfx/mdk/nrf52840.svd"
        },
        { 
            "name": "Attach Debug",
            "type": "cortex-debug",
            "request": "attach",
            "servertype": "jlink",
            "executable": "./build/blinky.elf",
            "cwd": "${workspaceRoot}",
            "device": "nRF52840_xxAA",
            "svdFile": "${workspaceRoot}/lib/nRF5-SDK/modules/nrfx/mdk/nrf52840.svd"
        },
        {
            "name": "Clean Debug",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "jlink",
            "executable": "./build/blinky.elf",
            "cwd": "${workspaceRoot}",
            "device": "nRF52840_xxAA",
            "svdFile": "${workspaceRoot}/lib/nRF5-SDK/modules/nrfx/mdk/nrf52840.svd",
            "preLaunchTask": "build"
        }
    ]
}